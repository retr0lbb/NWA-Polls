{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2022"],
    "target": "ES2022",                                 
    "module": "Node16",                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                       
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
